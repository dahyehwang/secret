<form action="/users" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p><label>Email: </label><input type="text" name="user2[email]" /></p>
	<p><label>Name: </label><input type="text" name="user2[name]" /></p>
	<p><label>Password: </label><input type="password" name="user2[password]" /></p>
	<p><label>Confirm Password: </label><input type="password" name="user2[password_confirmation]" /></p>
	<p><input type="submit" name="Join" value="Join" /></p>
</form>

<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p><%= error %></p>
	<% end %>
<% end %>
<% if flash[:success] %>
	<p><%= flash[:success] %></p>
<% end %>